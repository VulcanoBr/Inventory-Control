<%= form_with(model: product, local: true) do |p| %>
    <% if product.errors.any? %>
        <div id="error_explanation">
            <h6><%= pluralize(product.errors.count, "erro(s)") %> Encontrado(s) no preenchimento do formulario !!</h6>

            <ul>
                <% product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

     <div class="field">
        <%= p.label :product_type_id, "Tipo de Produto: " %>
        <%= p.select :product_type_id, @product_types, include_blank: "Selecione um produto...", required: true %>
    </div>

    <div class="field">
        <%= p.label :description, "Descrição :" %>
        <%= p.text_field :description %>
    </div>

     <div class="field">
        <%= p.label :product_color_id, "Cor : " %>
        <%= p.select :product_color_id, @product_colors, include_blank: "Selecione uma cor..." %>
    </div>

     <div class="field">
        <%= p.label :product_composition_id, "Composição : " %>
        <%= p.select :product_composition_id, @product_compositions, include_blank: "Selecione uma composição..." %>
    </div>

     <div class="field">
        <%= p.label :product_size_id, "Tamanho : " %>
        <%= p.select :product_size_id, @product_sizes, include_blank: "Selecione um tamanho..." %>
    </div>

    <br>
    <div class="action">
        <%= p.submit "Salvar", class: 'btn btn-primary btn-sm' %>
        <%= link_to 'Cancelar', products_path, class: 'btn btn-danger btn-sm' %>
    </div>
<% end %>