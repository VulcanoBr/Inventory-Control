
<table>
    <thead>
      <tr>
        <th>Codigo</th>
        <th>Descrição</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% resource.each do |c| %>
            <tr>
                <td><%= c.id %></td>
                <td><%= c.description %></td>
                <td><%= link_to ' Visualizar ', public_send("#{resource.model_name.param_key}_path", c.id),  class: 'btn btn-secondary btn-sm'  %></td>
                <td><%= link_to 'Alterar', public_send("edit_#{resource.model_name.param_key}_path", c.id), class: 'btn btn-success btn-sm' %></td>
                <td><%= link_to ' Excluir ', c, method: :delete, data: { confirm: "Voce tem certeza que quer Excluir ?" }, class: 'btn btn-danger btn-sm' %> </td>
                
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<div class="link">
  <%= link_to 'Nova Descrição', public_send("new_#{resource.model_name.param_key}_path", resource), class: 'btn btn-info btn-sm'%>         
  <%= link_to 'Sair', homes_path, class: 'btn btn-dark btn-sm' %>
</div>
