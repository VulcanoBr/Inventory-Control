<br>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Celular</th>
            <th>Observação</th>
        </tr>
    </thead>

    <tbody>
    
        <% if @contact_suppliers.length > 0 %> 
                <h5>Contato(s) do Fornecedor => <%= @contact_supplier.supplier_name %> </h5> 
                <br>
        <% end %>

        <% @contact_suppliers.each do |cs| %>  
            <tr>
                <td><%= cs.supplier_name %></td>
                <td><%= cs.email %></td>
                <td><%= cs.telephone %></td>
                <td><%= cs.cell_phone %></td>
                <td><%= cs.description %></td>
            </tr>
        <% end %>  
    <tbody>
</table>
<br>

<%= link_to 'Voltar', suppliers_path, class: 'btn btn-warning btn-sm' %>