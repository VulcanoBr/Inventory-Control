<div class="nested-fields">

    <div class="addresses"> 
        <div class="field" >
            <%= f.label :contact_name, "Nome :" %>
            <%= f.text_field :client_name %>
        </div>
        <div class="field" >
            <%= f.label :email, "Email :" %>
            <%= f.text_field :email %>
        </div>
        <div class="field" >
            <%= f.label :telephone, "Telefone :" %>
            <%= f.text_field :telephone, id: "phone", placeholder: "(99)9999-9999", pattern: "\([0-9]{2}\) [0-9]{4}-[0-9]{4}" %>
            <%= javascript_pack_tag 'maskphone' %>  
        </div>
        <div class="field" >
            <%= f.label :cell_phone, "Celular :" %>
            <%= f.text_field :cell_phone, id: "cellphone", placeholder: "(99)99999-9999" %>
            <%= javascript_pack_tag 'maskcellphone' %> 
        </div>
        <div class="field">
            <%= f.label :description, "Observação :" %>
            <%= f.text_field :description, id: "obs", pattern: "^[0-9]{3}.?[0-9]{3}.?[0-9]{3}-?[0-9]{2}" %>
        </div>

        <%= link_to_remove_association "Excluir Contato", f %>  

    </div>


</div>
<br>