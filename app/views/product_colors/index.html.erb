
<p id="notice"><%= notice %></p>
<h1>Lista de Cores de Produtos</h1>

<table>
    <thead>
      <tr>
        <th>Codigo</th>
        <th>Cor</th>
      </tr>
    </thead>

    <tbody>
        <% @product_colors.each do |c| %>
            <tr>
                <td><%= c.id %></td>
                <td><%= c.description %></td>
                         
                <td><%= link_to ' Show ', product_color_path(c) %></td>
                <td><%= link_to ' Edit ', edit_product_color_path(c) %></td>
                <td><%= link_to ' Delete ', c, method: :delete, data: { confirm: "Are you sure?" } %> </td>
                
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'Nova Cor', new_product_color_path %>
