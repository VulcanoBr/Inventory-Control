

<h5>Lista de Fornecedor(es)</h5>

<div class="row">    
    <%= form_with(url: '/suppliers', method: :get, local: true) do %>
        <div class="column">  
            <p> <%= text_field_tag (:q) %>
                <%= submit_tag "Pesquisar", class: "btn btn-info btn-sm" %> 
            </p>  
        </div>
    <% end %> 
        <div  class="column pagination justify-content-end mt-2"> <p> <%= link_to_prev_page @suppliers, '<< Pagina Anterior'  %>
            <%= link_to_next_page @suppliers, 'Proxima Pagina >>' %> </p>
        </div>
</div>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>CPF / CNPJ</th>
            <th>OBS</th>
            <th>Endereço(s)</th>
            <th>Contato(s)</th>
           
        </tr>
    </thead>

    <tbody>
        <% @suppliers.each do |s| %>
            <tr>
                <td><%= s.supplier_name %></td>
                <td><%= s.identification %></td>
                <td><%= s.description %></td>

                <td><%= link_to ' Endereço(s) ', address_supplier_path(id: s.id) %> </td>
                <td><%= link_to ' Contato(s) ', contact_supplier_path(id: s.id) %> </td>
                        
                <td><%= link_to ' Visualizar ', supplier_path(s),  class: 'btn btn-secondary btn-sm'  %></td>
                <td><%= link_to ' Alterar ', edit_supplier_path(s), class: 'btn btn-success btn-sm' %></td>
                <td><%= link_to ' Excluir ', s, method: :delete, data: { confirm: "Voce tem certeza que quer Excluir ?" }, class: 'btn btn-danger btn-sm' %> </td>
                
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'Novo Fornecedor', new_supplier_path, class: 'btn btn-info btn-sm' %>
<%= link_to 'Sair', homes_path, class: 'btn btn-dark btn-sm' %>